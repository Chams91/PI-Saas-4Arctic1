@using WebMap.Models

@model WebMap.Models.RequestViewModel

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_TemplateClient.cshtml";

}

<h2>Edit</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>RequestViewModel</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.RequestId)

        <div class="form-group">
            @Html.LabelFor(model => model.DateBegin, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.DateBegin, new { htmlAttributes = new { @class = "datepicker" } })
                @Html.ValidationMessageFor(model => model.DateBegin, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.DateEnd, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.DateEnd, new { htmlAttributes = new { @class = "datepicker" } })
                @Html.ValidationMessageFor(model => model.DateEnd, "", new { @class = "text-danger" })
            </div>
        </div>

       
        <div class="form-group">
            @Html.LabelFor(model => model.subject, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.subject, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.subject, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.coast, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.coast, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.coast, "", new { @class = "text-danger" })
            </div>
        </div>

       

        <table class="table">
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.experience)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.education)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.profil)
                </th>


                <th></th>
            </tr>

          




            @foreach (var item in ViewBag.data)

            {
                <tr>
                    <td>
                        @item.experience
                    </td>
                    <td>
                        @item.education
                    </td>
                
                    <td>
                        
                        @Html.ActionLink("Edit", "Edit", "RequiredSkills",
                        new { id = item.RequiredSkillsId },null)
                       
                    </td>
                
                </tr>



                    
            }

        </table>


        <link href="~/Content/themes/base/jquery-ui.min.css" rel="stylesheet" />
        @section scripts {


            @*<script src="~/Scripts/jquery-1.12.4.min.js"></script>*@
            <script type="text/javascript" src="@Url.Content("~/Content/MyTemplate/")js/jquery-ui.min.js"></script>
            <link href="@Url.Content("/Content/MyTemplate/jquery-ui.min.css")" rel="stylesheet" type="text/css" />
            <link href="@Url.Content("/Content/MyTemplate/Site.css")" rel="stylesheet" type="text/css" />
            <script type="text/javascript" src="@Url.Content("~/Content/MyTemplate/")js/jquery-1.8.3.js"></script>
            <script>

        $(function () {
            $(".datepicker").datepicker({
                dateFormat:"dd/mm/yy",
                changeMonth:true,
            changeYear:true
        });
        }

        );
            </script>
        }




        


       

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-primary" />
                
               
            </div>
            
            
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@if (ViewBag.msg != null)
{
    <script type="text/javascript">
    window.onload = function () {
        alert("@ViewBag.msg");
    };
    </script>
}

