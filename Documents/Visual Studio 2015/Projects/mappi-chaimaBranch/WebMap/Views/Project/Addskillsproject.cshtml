</div>

<table class="table">
    <tr>
        <th>
           <label>Skill Id</label>
        </th>
        <th>
            @Html.DisplayNameFor(model => model.name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Difficulity)
        </th>
        
        
        <th>
            Action
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr class="search">
            <td>
                @Html.DisplayFor(modelItem => item.Skillsnum)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Difficulity)
            </td>
            
           
            <td><button id="@item.Skillsnum" onclick="AddSkills(this)">Add</button></td>
