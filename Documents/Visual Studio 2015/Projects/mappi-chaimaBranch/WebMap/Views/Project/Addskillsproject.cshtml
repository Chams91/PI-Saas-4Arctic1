@model IEnumerable<WebMap.Models.SkillsModelView>

@{
    ViewBag.Title = "Addskillsproject";
    Layout = "~/Views/Shared/_MyTemplatepage.cshtml";
}

<div class="form-group form-focus">
    <label class="control-label">Search Skills to Add ...</label>
