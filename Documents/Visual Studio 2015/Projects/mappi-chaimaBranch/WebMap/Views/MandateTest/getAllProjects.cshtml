@model IEnumerable<WebMap.Models.ProjectViewModel>

@{
    ViewBag.Title = "getAllProjects";
    Layout = "~/Views/Shared/_MyTemplatepage.cshtml";
}

<h2>getAllProjects</h2>


<div class="col-sm-3 col-xs-6">
    <div class="form-group form-focus">
        <label class="control-label">Search</label>
        <input type="text" class="form-control floating" id="search" />
    </div>
</div>
<div class="row">
    <div class="col-md-12">
        <div class="table-responsive">

            <table class="table table-striped custom-table datatable">

                <thead>
                    <tr role="row">

                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => model.Name)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.DateBegin)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.DateEnd)
                        </th>


                        <th>
                            @Html.DisplayNameFor(model => model.TotalNbrRessourcesLevio)
                        </th>
                       <th>State</th>
                        <th></th>
                    </tr>
                </thead>

                @foreach (var item in Model)
                {
                    <tr>

                        <td>
                            @Html.DisplayFor(modelItem => item.Name)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.DateBegin)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.DateEnd)
                        </td>


                        <td>
                            @Html.DisplayFor(modelItem => item.TotalNbrRessourcesLevio)
                        </td>
                        <td>
                            <div class="dropdown action-label">
                                <a class="btn btn-white btn-sm rounded dropdown-toggle" data-toggle="dropdown" aria-expanded="false"><i class="fa fa-dot-circle-o text-success"></i> Unsaigned</a>    
                            </div>
                        </td>
                        <td>
                            @Html.ActionLink("Assign", "AssignResource", new { id = item.ProjectId })
                        </td>

                    </tr>
                }

          
            <tbody>
                </table>
        </div>
    </div>
</div>