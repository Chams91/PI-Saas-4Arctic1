@model IEnumerable<WebMap.Models.ResourceViewModel>

@{
    ViewBag.Title = "AssignResource";
    Layout = "~/Views/Shared/_MyTemplatepage.cshtml";
}

<h2>AssignResource</h2>
<div class="col-sm-3 col-xs-6">
    <div class="form-group form-focus">
        <label class="control-label">Search</label>
        <input type="text" class="form-control floating" id="search" />
    </div>
</div>
<div class="row">
    <div class="col-md-12">
        <div class="table-responsive">

            <table class="table table-striped custom-table datatable">

                <thead>
                    <tr role="row">

                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => model.LastName)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.FirstName)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Email)
                        </th>


                        <th>
                            @Html.DisplayNameFor(model => model.BuissnesSector)
                        </th>
                        
                        <th>
                            @Html.DisplayNameFor(model => model.Contrat)
                        </th>

                        <th></th>
                    </tr>
                </thead>

                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.LastName)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.FirstName)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Email)
                            </td>

                            <td>
                                @Html.DisplayFor(modelItem => item.BuissnesSector)
                            </td>
                           
                            <td>
                                @Html.DisplayFor(modelItem => item.Contrat)

                            </td>
                            <td>
                                @Html.ActionLink("AddMandate", "Create", new { idP = item.ProjectId, idR = item.userId }) |

                            </td>
                        </tr>
                    }

            
            <tbody>
                </table>
        </div>
    </div>
</div>