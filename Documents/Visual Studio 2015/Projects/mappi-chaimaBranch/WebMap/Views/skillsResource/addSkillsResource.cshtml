@model IEnumerable<WebMap.Models.SkillsViewModels>

@{
    ViewBag.Title = "addSkillsResource";
    Layout = "~/Views/Shared/_MyTemplatepage.cshtml";
}

<h2>addSkillsResource</h2>
<div class="form-group form-focus">
    <label class="control-label">Search Skills to Add ...</label>
    <input type="text" class="form-control floating" id="search" />
</div>
@using (Html.BeginForm("addSkillsResource", "skillsResource", FormMethod.Post))
{
    
    <input class="control-label" type="text" name="skillstoadd" id="skillstoadd" hidden />
    <input  type="text" value="@Model.First().userId" name="userId" hidden />
    <input type="submit" value="Add the list of skills" class="btn btn-success btn-block" />
}
<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
       
        <th>
            @Html.DisplayNameFor(model => model.name)
        </th>
      
       
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr class="search">
       
        <td>
            @Html.DisplayFor(modelItem => item.name)
        </td>
        
       
        <td><button id="@item.SkillsId" onclick="AddSkills(this)">Add</button></td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { /* id=item.PrimaryKey */ }) |
            @Html.ActionLink("Details", "Details", new { /* id=item.PrimaryKey */ }) |
            @Html.ActionLink("Delete", "Delete", new { /* id=item.PrimaryKey */ })
        </td>
    </tr>
}

</table>

<script>
    function AddSkills(i) {
        var x = document.getElementById('skillstoadd').value += i.id+"/";
        i.style.visibility = 'hidden';
    }
</script>
