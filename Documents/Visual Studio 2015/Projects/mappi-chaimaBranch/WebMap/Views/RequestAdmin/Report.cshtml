@model WebMap.Models.RequestViewModel

@{
    ViewBag.Title = "Report";
    Layout = "~/Views/Shared/_MyTemplatepage.cshtml";
}

<h2>Report Request</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
       
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.RequestId)

        <hr />
        <dl class="dl-horizontal">
            <dt>
                @Html.DisplayNameFor(model => model.DateBegin)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.DateBegin)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.DateEnd)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.DateEnd)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.DateDeposit)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.DateDeposit)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.subject)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.subject)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.coast)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.coast)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.nbrResource)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.nbrResource)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.ClientId)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.ClientId)
            </dd>

            

        </dl>

        
        <div class="form-group">
            @Html.LabelFor(model => model.ReportedDate, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.ReportedDate, new { htmlAttributes = new { @class = "datepicker" } })
                @Html.ValidationMessageFor(model => model.ReportedDate, "", new { @class = "text-danger" })
            </div>
        </div>

        
        

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Report" class="btn btn-primary" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>


<link href="~/Content/themes/base/jquery-ui.css" rel="stylesheet" />
<link href="~/Content/themes/base/jquery-ui.min.css" rel="stylesheet" />
@section scripts {


    @*<script src="~/Scripts/jquery-1.12.4.min.js"></script>*@
    <script type="text/javascript" src="@Url.Content("~/Content/MyTemplate/")js/jquery-ui.min.js"></script>
    <link href="@Url.Content("/Content/MyTemplate/jquery-ui.min.css")" rel="stylesheet" type="text/css" />
    <link href="@Url.Content("/Content/MyTemplate/Site.css")" rel="stylesheet" type="text/css" />
    <script type="text/javascript" src="@Url.Content("~/Content/MyTemplate/")js/jquery-1.8.3.js"></script>
    <script>

        $(function () {
            $(".datepicker").datepicker({
                dateFormat:"dd/mm/yy",
                changeMonth:true,
            changeYear:true
        });
        }

        );
    </script>
}


 


@if (ViewBag.msg != null)
{
    <script type="text/javascript">
    window.onload = function () {
        alert("@ViewBag.msg");
    };
    </script>
}
