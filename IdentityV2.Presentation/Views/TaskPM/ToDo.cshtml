@model IEnumerable<IdentityV2.Presentation.Models.TaskPMVM>

@{
    ViewBag.Title = "ToDo";
    Layout = "~/Views/Shared/_MyTemplatepage.cshtml";

}

<h2>New  Tasks</h2>


@using (Html.BeginForm())
{

  


    <table class="table">
        <tr>


            <th>
                @Html.DisplayNameFor(model => model.ProjectId)
            </th>


            <th>
                @Html.DisplayNameFor(model => model.StartDate)
            </th>

            <th>
                @Html.DisplayNameFor(model => model.DeadLine)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Status)
            </th>



            <th>
                Action
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.ProjectName)
                </td>

                <td>
                    @Html.DisplayFor(modelItem => item.StartDate)
                </td>

                <td>
                    @Html.DisplayFor(modelItem => item.DeadLine)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    <span class="label label-success-border">@Html.DisplayFor(modelItem => item.Status)</span>
                    
                </td>

                <td>
                    @Html.ActionLink("Doing", "Assign", new { id = item.TaskId }) |
                    @Html.ActionLink("Details", "DetailsTD", new { id = item.TaskId }) |

                </td>

            </tr>
        }

    </table>
}
