@model IEnumerable<IdentityV2.Presentation.Models.TaskPMVM>

@{
    ViewBag.Title = "ToDo";
    Layout = "~/Views/Shared/_MyTemplatepage.cshtml";

}

<h2>New  Tasks</h2>


@using (Html.BeginForm())
{

    <table>
        <tr>
            <td>
                <div>
                    Search Tasks: @Html.TextBox("searchString")
                </div>
            </td>
            <td>
                <input type="submit" class="btn btn-primary" value="Search" id="submit" />
            </td>
        </tr>
    </table>

    <br>
    <br>



    <table class="table">
        <tr>


            <th>
                @Html.DisplayNameFor(model => model.ProjectId)
            </th>


            <th>
                @Html.DisplayNameFor(model => model.StartDate)
            </th>

            <th>
                @Html.DisplayNameFor(model => model.DeadLine)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Status)
            </th>



            <th>
                Action
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.ProjectName)
                </td>

                <td>
                    @Html.DisplayFor(modelItem => item.StartDate)
                </td>

                <td>
                    @Html.DisplayFor(modelItem => item.DeadLine)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Status)
                </td>

                <td>
                    @Html.ActionLink("Doing", "Assign", new { id = item.TaskId }) |
                    @Html.ActionLink("Details", "DetailsTD", new { id = item.TaskId }) |

                </td>

            </tr>
        }

    </table>
}
