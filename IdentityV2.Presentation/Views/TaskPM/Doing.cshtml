@model IEnumerable<IdentityV2.Presentation.Models.TaskPMVM>

@{
    ViewBag.Title = "Doing";
    Layout = "~/Views/Shared/_MyTemplatepage.cshtml";
}

<h2>Doing </h2>

<div id="progressBarToDo">

    <p>@(ViewBag.Percent)%</p>
    <div class="progress ">
        <div class="progress-bar" role="progressbar"
             style="width:@(Html.AttributeEncode(ViewBag.Percent))%"></div>


    </div>
</div>

@using (Html.BeginForm())
{

    <table>
        <tr>
            <td>
                <div>
                    Search Tasks: @Html.TextBox("searchString")
                </div>
            </td>
            <td>
                <input type="submit" class="btn btn-primary" value="Search" id="submit" />
            </td>
        </tr>
    </table>

    <br>
    <br>



    <table class="table">
        <tr>


            <th>
                @Html.DisplayNameFor(model => model.ProjectId)
            </th>


            <th>
                @Html.DisplayNameFor(model => model.StartDate)
            </th>

            <th>
                @Html.DisplayNameFor(model => model.DeadLine)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Status)
            </th>



            <th>
                Action
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.ProjectName)
                </td>

                <td>
                    @Html.DisplayFor(modelItem => item.StartDate)
                </td>

                <td>
                    @Html.DisplayFor(modelItem => item.DeadLine)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    <span class="label label-success-border">@Html.DisplayFor(modelItem => item.Status)</span>
                </td>

                <td>
                    @Html.ActionLink("Done", "Assign2", new { id = item.TaskId }) |
                    @Html.ActionLink("Details", "DetailsTD", new { id = item.TaskId }) |

                </td>
            </tr>
        }

    </table>
}